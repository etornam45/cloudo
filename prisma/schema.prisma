generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id            String         @id @default(cuid())  
  username      String
  email         String         @unique
  password      String
  folders       Folder[]
  files         File[]
  sharedFolders SharedFolder[]
  sharedFiles   SharedFile[]
  StoragePlan   StoragePlan?   @relation(fields: [storagePlanId], references: [id])
  storagePlanId String?        
}

model StoragePlan {
  id          String  @id @default(cuid())  
  name        String
  max_storage BigInt
  price       Float
  users       Users[]
}

model Folder {
  id         String   @id @default(cuid())  
  name       String
  created_at DateTime

  owner_id     String         
  owner        Users          @relation(fields: [owner_id], references: [id])
  files        File[]
  SharedFolder SharedFolder[]

  parent_id String   
  children  Folder   @relation("FolderToFolder", fields: [parent_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  Folder    Folder[] @relation("FolderToFolder")
}

model File {
  id          String       @id @default(cuid())  
  name        String
  size_bytes  Int
  created_at  DateTime
  type_id     String       
  owner_id    String       
  folder_id   String       
  owner       Users        @relation(fields: [owner_id], references: [id])
  folder      Folder       @relation(fields: [folder_id], references: [id])
  type        FileType     @relation(fields: [type_id], references: [id])
  sharedFiles SharedFile[]
}

model FileType {
  id    String @id @default(cuid())  
  name  String
  files File[]
}

model SharedFolder {
  id        String @id @default(cuid())  
  folder_id String 
  user_id   String 
  folder    Folder @relation(fields: [folder_id], references: [id])
  user      Users  @relation(fields: [user_id], references: [id])
}

model SharedFile {
  id      String @id @default(cuid())  
  file_id String 
  user_id String 
  file    File   @relation(fields: [file_id], references: [id])
  user    Users  @relation(fields: [user_id], references: [id])
}
